# アプリケーション基本設定
APP_NAME=UtaMemo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ロケール設定
APP_LOCALE=ja
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ja_JP

# メンテナンス設定
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP設定
PHP_CLI_SERVER_WORKERS=4

# 暗号化設定
BCRYPT_ROUNDS=12

# ログ設定
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# データベース設定（Docker用）
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=utamemo
DB_USERNAME=utamemo_user
DB_PASSWORD=utamemo_password

# セッション設定
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ブロードキャスト設定
BROADCAST_CONNECTION=log

# ファイルシステム設定
FILESYSTEM_DISK=local

# キュー設定
QUEUE_CONNECTION=database

# キャッシュ設定
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached設定
MEMCACHED_HOST=127.0.0.1

# Redis設定（Docker用）
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# メール設定
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@utamemo.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS設定
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite設定
VITE_APP_NAME="${APP_NAME}"
